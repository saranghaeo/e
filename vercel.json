{
  "rewrites": [
    {
      "source": "/api/steam/:path*",
      "destination": "https://api.steampowered.com/:path*",
      "headers": {
        "host": "api.steampowered.com"
      }
    },
    {
      "source": "/login-callback",
      "destination": "/src/store/auth.js"
    },
    
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
